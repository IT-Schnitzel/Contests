import java.io.Console;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int time = in.nextInt();
        if (time == 1 )
        {
            System.out.println(1);
        }
        else
        {
            System.out.println(4*time - 4);
        }
    }
}
