#include <iostream>
using namespace std;

int main()
{
    int a, b, star, counter;
    cin >> a;
    cin >> b;
    counter = a;
    star = b;
    while (true)
    {
        if (star < counter)
        {
            cout << star << endl;
            break;
        }
        else
        {
            if (counter == 1)
            {
                star = star - 1;
                counter = a;
            }
            else
            {
                star = star - counter;
                counter = counter - 1;
            }
        }
        //cout << counter << endl;
        //cout << star << endl;
    }
}
